<Window x:Class="LIBRARY.Bookpage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LIBRARY"
        mc:Ignorable="d"
        Title="Bookpage" Height="342.017" Width="374.79">
    <Grid Margin="0,0,2,19">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="145*"/>
            <ColumnDefinition Width="68*"/>
            <ColumnDefinition Width="152*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="image" HorizontalAlignment="Left" Height="62" Margin="56,11,0,0" VerticalAlignment="Top" Width="85"/>
        <Label x:Name="label" Content="Title" HorizontalAlignment="Left" Margin="10,75,0,0" VerticalAlignment="Top" FontSize="10"/>
        <Label x:Name="label_Copy" Content="Author" HorizontalAlignment="Left" Margin="10,115,0,0" VerticalAlignment="Top" FontSize="10"/>
        <Label x:Name="label_Copy1" Content="Price" HorizontalAlignment="Left" Margin="10,159,0,0" VerticalAlignment="Top" FontSize="10"/>
        <Label x:Name="label_Copy2" Content="ISBN" HorizontalAlignment="Left" Margin="10,192,0,0" VerticalAlignment="Top" FontSize="10"/>
        <Label x:Name="label_Copy3" Content="Genre" HorizontalAlignment="Left" Margin="10,223,0,0" VerticalAlignment="Top" FontSize="10"/>
        <TextBox x:Name="titleTB" HorizontalAlignment="Left" Height="23" Margin="56,78,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="186" FontSize="11" Grid.ColumnSpan="3" IsEnabled="False"/>
        <TextBox x:Name="authorTB" HorizontalAlignment="Left" Height="23" Margin="56,118,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="186" FontSize="11" Grid.ColumnSpan="3" IsEnabled="False"/>
        <TextBox x:Name="priceTB" HorizontalAlignment="Left" Height="21" Margin="56,161,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="186" FontSize="11" Grid.ColumnSpan="3" IsEnabled="False"/>
        <TextBox x:Name="isbnTB" HorizontalAlignment="Left" Height="20" Margin="56,195,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="186" FontSize="11" Grid.ColumnSpan="3" IsEnabled="False"/>
        <TextBox x:Name="genreTB" HorizontalAlignment="Left" Height="23" Margin="56,227,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="186" FontSize="11" Grid.ColumnSpan="3" IsEnabled="False"/>
        <Button x:Name="saveButton" Content="Save to Shelf" HorizontalAlignment="Left" Margin="51.527,227,0,0" VerticalAlignment="Top" Width="76" Click="saveButton_Click" AutomationProperties.IsRequiredForForm="True" Grid.Column="2"/>
        <Button x:Name="returnButton" Content="Return to Homepage" HorizontalAlignment="Left" Height="22" Margin="51.527,257,0,0" VerticalAlignment="Top" Width="75" FontSize="7" Click="returnButton_Click" Grid.Column="2"/>
        <Button x:Name="deleteButton" Content="Delete Book" HorizontalAlignment="Left" Height="18" Margin="51.527,195,0,0" VerticalAlignment="Top" Width="76" Grid.Column="2" Click="deleteButton_Click"/>
        <Button x:Name="editButton" Content="Edit Book" HorizontalAlignment="Left" Height="18" Margin="51.527,167,0,0" VerticalAlignment="Top" Width="76" Click="editButton_Click" Grid.Column="2"/>
    </Grid>
</Window>
