<Window x:Class="LIBRARY.ModifyBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LIBRARY"
        mc:Ignorable="d"
        Title="ModifyBook" Height="341.176" Width="389.916">
    <Grid>
        <Image x:Name="image" HorizontalAlignment="Left" Height="60" Margin="10,10,0,0" VerticalAlignment="Top" Width="60"/>
        <Button x:Name="selectImgButton" Content="Select Image" HorizontalAlignment="Left" Margin="75,50,0,0" VerticalAlignment="Top" Width="75" Click="selectImgButton_Click"/>
        <Label x:Name="label" Content="Title" HorizontalAlignment="Left" Margin="10,75,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_Copy" Content="Author" HorizontalAlignment="Left" Margin="10,115,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_Copy1" Content="Price" HorizontalAlignment="Left" Margin="10,161,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_Copy2" Content="ISBN" HorizontalAlignment="Left" Margin="10,192,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_Copy3" Content="Genre" HorizontalAlignment="Left" Margin="10,223,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="title" HorizontalAlignment="Left" Height="23" Margin="75,79,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="272" FontSize="11"/>
        <TextBox x:Name="author" HorizontalAlignment="Left" Height="23" Margin="75,119,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="272" FontSize="11"/>
        <TextBox x:Name="price" HorizontalAlignment="Left" Height="23" Margin="75,161,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="158" FontSize="11"/>
        <TextBox x:Name="ISBN" HorizontalAlignment="Left" Height="23" Margin="75,195,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="158" FontSize="11"/>
        <TextBox x:Name="genre" HorizontalAlignment="Left" Margin="75,227,0,53" TextWrapping="Wrap" Text="" Width="158" FontSize="11"/>
        <Button x:Name="addBookButton" Content="Add Book" HorizontalAlignment="Left" Margin="75,272,0,0" VerticalAlignment="Top" Width="75" Click="addBookButton_Click"/>
        <Button x:Name="searchISBN_Button" Content="Search" HorizontalAlignment="Left" Margin="261,203,0,0" VerticalAlignment="Top" Width="75" Click="searchISBN_Button_Click"/>
        <Button x:Name="homepageButton" Content="Homepage" HorizontalAlignment="Left" Margin="158,272,0,0" VerticalAlignment="Top" Width="75" Click="homepage_Click"/>
        <Button x:Name="update" Content="Update Book" HorizontalAlignment="Left" Height="20" Margin="261,272,0,0" VerticalAlignment="Top" Width="75" Click="update_Click"/>

    </Grid>
</Window>
